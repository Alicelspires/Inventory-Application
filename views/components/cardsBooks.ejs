<div class="border-2 border-borders-and-btn rounded-lg bg-gray-light flex gap-4 p-4 w-full h-auto">
    <img class="w-30 h-max bg-gray-lighter rounded-md" 
        src="<%= book.book_cover || '' %>" 
        alt="book cover: <%= book.title || '' %>"
    >
    <span class="w-full flex flex-col justify-between">
        <span class="mb-4 text-sm">
            <h3 class="text-xl! font-titles font-semibold mb-2"><%= book.title || "" %></h3>
            <p> <%= book.author  || '' %> | <%= book.year_book || "" %></p>
            <hr class="my-2">
            <p> <%= book.description ? book.description.slice(0, 50) + "..." : "" %></p>
        </span>
        <span class="flex gap-2">
            <a href="/books/<%= book.id_book %>/update">
                <button class="rounded-md bg-gray-lighter p-2 cursor-pointer hover:bg-gray-dark">
                    <img
                        src="/img/edit.png"
                        class="w-5 m-auto"
                        alt="(pen-icon) edit the book info"
                        title="edit">
                </button>
            </a>
            <a href="/books/<%= book.id_book %>/delete">
                <button class="rounded-md bg-gray-lighter p-2 cursor-pointer hover:bg-gray-dark">
                    <img
                        src="/img/delete.png"
                        class="w-5 m-auto"
                        alt="(trash icon) delete this book"
                        title="delete">
                </button>
            </a>
        </span>
    </span>
</div>